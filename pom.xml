    <description>iartisan admin 后台服务快速构建</description>
    <url>https://git.oschina.net/iartisan/iartisan-admin-template</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- <gpg.keyname>3D91D156</gpg.keyname>-->
        <java.version>1.8</java.version>
        <sitemesh.version>3.0.1</sitemesh.version>
        <shiro.version>1.4.0</shiro.version>
        <mybatis-plus.version>2.1.4</mybatis-plus.version>
        <mybatisplus-spring-boot-starter.version>1.0.5</mybatisplus-spring-boot-starter.version>
        <iartisan.runtime.version>1.0.5</iartisan.runtime.version>
    </properties>

    <developers>
        <developer>
            <name>King</name>
            <email>wangkechaodream@163.com</email>
