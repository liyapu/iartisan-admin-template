            <plugin>
                <groupId>org.iartisan</groupId>
                <artifactId>iartisan-generator-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
                    <templateConfig>
                        <loadPath>classpath</loadPath>
                        <templatePath>/templates/iartisan/</templatePath>
                    </templateConfig>
                    <baseConfig>
                        <directory>D://</directory>
                        <orm>mybatis-plus</orm>
                        <author>King</author>
                    </baseConfig>
                    <!-- 数据库连接 -->
                    <dataSourceConfig>
                        <driverName>com.mysql.jdbc.Driver</driverName>
                        <url>jdbc:mysql://127.0.0.1:3306/iartisan_admin_template</url>
                        <!--用户名 -->
                        <user>root</user>
                        <!-- 密码 -->
                        <password>root</password>
                        <dbType>mysql</dbType>
                    </dataSourceConfig>
                    <tableConfig>
                        <tableNames>system_log</tableNames>
                    </tableConfig>
                    <!--dao 层配置-->
                    <daoConfig>
                        <modelPackage>org.iartisan.admin.template.dao.model</modelPackage>
                        <daoPackage>org.iartisan.admin.template.dao.mapper</daoPackage>
                        <mapperXmlPackage>org.iartisan.admin.template.dao.mapper
                        </mapperXmlPackage>
                    </daoConfig>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <distributionManagement>
        <snapshotRepository>
            <id>central-snapshots</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>central-release</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
